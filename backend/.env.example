# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/database_name

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
EMAIL_SENDER=noreply@yourdomain.com
EMAIL_PASSWORD=your-email-password-or-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# SMS Configuration
SMS_ENABLED=false
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=YourAppName
SMS_ENDPOINT=https://api.africastalking.com/version1/messaging

# WhatsApp Configuration
WHATSAPP_ENABLED=false
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-id

# OTP Configuration
LOGIN_OTP_REQUIRED=true

# M-Pesa/Daraja Configuration
DARAJA_CONSUMER_KEY=your-consumer-key
DARAJA_CONSUMER_SECRET=your-consumer-secret
DARAJA_BUSINESS_SHORTCODE=your-shortcode
DARAJA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/payments/mpesa-callback

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=your-public-key
FLUTTERWAVE_SECRET_KEY=your-secret-key
FLUTTERWAVE_ENCRYPTION_KEY=your-encryption-key

# Exchange Rate API Configuration
EXCHANGE_RATE_PROVIDER=exchangerate_api
EXCHANGERATE_API_KEY=your-api-key
OPENEXCHANGERATES_API_KEY=your-api-key
CURRENCYLAYER_API_KEY=your-api-key
EXCHANGE_RATE_API=https://v6.exchangerate-api.com/v6/YOUR_API_KEY/latest/
HISTORICAL_RATE_API=

# Logging
LOG_LEVEL=INFO
