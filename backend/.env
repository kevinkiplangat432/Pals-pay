# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development  # development, testing, production
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-12345


# Development Database
DATABASE_URL=postgresql://palsuser:palspassword@localhost:5432/pals_db

JWT_SECRET_KEY=jwt-super-secret-key-change-in-production-67890
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds


# Sandbox credentials (for testing)
DARAJA_CONSUMER_KEY=your_daraja_consumer_key_here
DARAJA_CONSUMER_SECRET=your_daraja_consumer_secret_here
DARAJA_BUSINESS_SHORTCODE=174379  # Sandbox business shortcode
DARAJA_PASSKEY=your_daraja_passkey_here

# Daraja API URLs
DARAJA_BASE_URL=https://sandbox.safaricom.co.ke  # Sandbox
# DARAJA_BASE_URL=https://api.safaricom.co.ke    # Production

# Callback URLs (for MPesa notifications)
MPESA_CALLBACK_URL=http://localhost:5000/api/wallet/deposit/mpesa-callback

# Default wallet limits
MAX_DAILY_TRANSFER=100000      # 100,000 KES
MAX_MONTHLY_TRANSFER=1000000   # 1,000,000 KES
MIN_TRANSACTION_AMOUNT=10      # Minimum 10 KES

# OTP requirement thresholds
OTP_REQUIRED_AMOUNT=50000      # Require OTP for transactions above 50,000 KES
OTP_REQUIRED_ADMIN_ACTIONS=true  # Always require OTP for admin actions


# SMTP Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@moneytranaferapp.com

# SMS Gateway (for OTP - optional, use mock for testing)
SMS_GATEWAY_URL=https://api.africastalking.com/version1/messaging
SMS_API_KEY=your_sms_api_key
SMS_USERNAME=your_sms_username


# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Headers
SECURITY_PASSWORD_SALT=password-salt-change-this
BCRYPT_LOG_ROUNDS=12


UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg


LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/app.log


# Testing flags
TESTING=False
WTF_CSRF_ENABLED=False  # Disable CSRF for API testing


# OTP Configuration
OTP_EXPIRY_MINUTES=10      # OTP valid for 10 minutes
OTP_MAX_ATTEMPTS=5         # Lock after 5 failed attempts
OTP_LOCKOUT_MINUTES=60     # Lock for 1 hour after max attempts

# KYC Configuration
KYC_EXPIRY_YEARS=1         # KYC expires after 1 year
KYC_REVIEW_DAYS=2          # KYC reviewed within 2 days

# Transaction Fees (in percentage or fixed amount)
TRANSFER_FEE_PERCENTAGE=1   # 1% fee for transfers
TRANSFER_MIN_FEE=10         # Minimum 10 KES
TRANSFER_MAX_FEE=5000       # Maximum 5000 KES
WITHDRAWAL_FEE_FIXED=27.5   # Fixed 27.50 KES for withdrawals
DEPOSIT_FEE=0               # No fee for deposits

# App URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
API_VERSION=v1

# Feature Flags
ENABLE_MPESA=true
ENABLE_OTP=true
ENABLE_KYC=true
ENABLE_AUDIT_LOGS=true
ENABLE_ADMIN_DASHBOARD=true